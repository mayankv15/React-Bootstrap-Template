{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["es6", "dom", "es2019"],
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "target": "esnext",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "gulpfile.js"]
}

